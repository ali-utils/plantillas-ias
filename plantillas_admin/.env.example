# ============================================
# bMOI Admin Web - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git

# ============================================
# API Configuration
# ============================================
VITE_API_URL=http://localhost:3000/api/v1

# ============================================
# Application Configuration
# ============================================
VITE_APP_NAME=bMOI Admin
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Admin panel for bMOI multi-tenant platform

# ============================================
# Environment
# ============================================
NODE_ENV=development

# ============================================
# Backend Integration (for full docker compose)
# ============================================
# Database
DATABASE_URL=postgresql://bmoi:bmoi_password_dev@postgres:5432/bmoi_db?schema=public
POSTGRES_DB=bmoi_db
POSTGRES_USER=bmoi
POSTGRES_PASSWORD=bmoi_password_dev

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_dev

# ============================================
# Feature Flags (Optional)
# ============================================
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# ============================================
# Development Tools (Optional)
# ============================================
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_ENABLE_MSW=false

# ============================================
# S3 / Object Storage (MinIO for development)
# ============================================
# S3-compatible storage for documents, evidences, images
VITE_S3_ENDPOINT=http://localhost:9000
VITE_S3_BUCKET_KYC_DOCUMENTS=bmoi-kyc-docs
VITE_S3_BUCKET_EVIDENCES=bmoi-evidences
VITE_S3_BUCKET_MODERATION=bmoi-moderation
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# ============================================
# Real-Time Notifications (NATS / SSE)
# ============================================
VITE_NATS_URL=ws://localhost:4222
VITE_SSE_ENDPOINT=http://localhost:3000/api/v1/notifications/stream

# ============================================
# Search Engine (Meilisearch)
# ============================================
VITE_SEARCH_ENDPOINT=http://localhost:7700
VITE_SEARCH_API_KEY=masterKey_dev_only
MEILI_MASTER_KEY=masterKey_dev_only

# ============================================
# Security & MFA
# ============================================
# TOTP settings (for 2FA)
VITE_MFA_ISSUER=bMOI Admin
VITE_MFA_QR_SIZE=200
# Session timeout (in minutes)
VITE_SESSION_TIMEOUT=30
# Max failed login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=15

# ============================================
# Feature Flags - bMOI Specific
# ============================================
# KYC Module
VITE_ENABLE_KYC_MODULE=true
VITE_ENABLE_AUTO_SANCTIONS_CHECK=true
# Moderation Module
VITE_ENABLE_MODERATION_MODULE=true
VITE_ENABLE_ML_CONTENT_DETECTION=false
# Disputes Module
VITE_ENABLE_DISPUTES_MODULE=true
# Executive Dashboard
VITE_ENABLE_EXECUTIVE_DASHBOARD=true
VITE_ENABLE_REAL_TIME_METRICS=true
# Data Export
VITE_ENABLE_DATA_EXPORT=true
VITE_MAX_EXPORT_ROWS=100000

# ============================================
# Performance & Optimization
# ============================================
# React Query cache times (in milliseconds)
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=600000
# Image optimization
VITE_MAX_IMAGE_SIZE_MB=10
VITE_IMAGE_COMPRESSION_QUALITY=0.8
VITE_IMAGE_MAX_WIDTH=1920
VITE_IMAGE_MAX_HEIGHT=1920
# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# ============================================
# Notes
# ============================================
# - All VITE_* variables are exposed to the browser
# - Never put sensitive data in VITE_* variables
# - Backend variables (DATABASE_URL, JWT_SECRET, etc.) are only used when running full stack with docker compose --profile full
# - For production, use proper secret management (AWS Secrets Manager, Azure Key Vault, etc.)
# - S3_ACCESS_KEY and S3_SECRET_KEY should only be used in backend, never exposed to frontend
# - Use presigned URLs for secure S3 access from frontend
